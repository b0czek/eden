{
  "id": "com.eden.debug.db-explorer",
  "name": "Database Explorer",
  "version": "1.0.0",
  "description": "Debug tool for viewing and managing application databases",
  "author": "Eden Team",
  "build": {
    "command": "pnpm run build"
  },
  "frontend": {
    "entry": "dist/index.html"
  },
  "window": {
    "mode": "both",
    "defaultSize": {
      "width": 1000,
      "height": 700
    },
    "minSize": {
      "width": 800,
      "height": 500
    },
    "resizable": true,
    "movable": true
  },
  "permissions": ["db/superuser"],
  "icon": "icon.svg"
}
