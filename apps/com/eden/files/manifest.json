{
  "id": "com.eden.files",
  "name": "Files",
  "version": "1.0.0",
  "description": "A file explorer for managing files and directories",
  "author": "Eden Team",
  "build": {
    "command": "npm run build"
  },
  "frontend": {
    "entry": "dist/index.html"
  },
  "window": {
    "mode": "both",
    "defaultSize": {
      "width": 900,
      "height": 600
    },
    "minSize": {
      "width": 600,
      "height": 400
    },
    "resizable": true,
    "movable": true
  },
  "permissions": ["fs/*", "db/rw"],
  "icon": "icon.svg"
}
