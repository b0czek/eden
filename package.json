{
  "name": "eden",
  "version": "0.1.0",
  "description": "A modular Electron desktop environment with extensible app support",
  "main": "dist/main/main.js",
  "author": "Eden Team",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:main && npm run build:shell && npm run copy-assets",
    "build:main": "tsc",
    "build:shell": "vite build",
    "copy-assets": "cp src/eveshell/app-preload.js dist/eveshell/",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.10.0",
    "electron": "^32.0.0",
    "solid-js": "^1.9.10",
    "typescript": "^5.3.0",
    "vite": "^7.2.1",
    "vite-plugin-solid": "^2.11.10"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  }
}
